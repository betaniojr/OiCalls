<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

	<LinearLayout
	    android:id="@+id/mLlayoutCallingButtons"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >

	    <TextView android:id="@+id/callingButton"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:hint="Calling to"
	        android:textColor="#003366"
	        android:textSize="40sp"/>
	    
	    <TextView android:id="@+id/callingPhoneNumberButton"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textColor="#003366"
	        android:textSize="40sp"/>
	    
	    
	     <TextView android:id="@+id/countDown"
	        android:layout_width="fill_parent"
	        android:layout_height="20dp"
            android:background="#2196f3"
	        android:textColor="#fff"/>
	     
	</LinearLayout>
	

    
    <LinearLayout
        android:id="@+id/mLlayoutBottomButtons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >
	    
    <!--         <textView android:id="@+id/countDown"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textColor="#003366"
	        android:textSize="12sp"/> -->

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="2"
            android:text="End Call"
            android:background="#A00000"
            android:textColorHighlight="#000"
            android:textColor="#fff"
            android:textSize="30dp"
            android:onClick="endCall"
                />
    </LinearLayout>

</RelativeLayout>